{
  "apiVersion": "batch/v1",
  "spec": {
    "template": {
      "spec": {
        "containers": [
          {
            "name": "busybox",
            "image": "busybox:latest",
            "stdin": true,
            "stdinOnce": true,
            "tty": true,
            "args": [
              "sh"
            ],
            "volumeMounts": [
              {
                "mountPath": "/test",
                "name": "test-volume"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "test-volume",
            "hostPath": {
              "path": "/home/alin/sandbox/test"
            }
          }
        ]
      }
    }
  }
}